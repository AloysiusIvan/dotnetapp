@page
@model AloyWebRzr.Pages.Categories.DeleteModel

<div class="container">
    <form method="post">
        <input asp-for="Category.Id" hidden />
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Edit Category</h2>
                <hr />
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Category.Name" class="p-0"></label>
                <input asp-for="Category.Name" class="form-control" disabled />
            </div>
            <div class="mb-3 row p-1">
                <label asp-for="Category.DisplayOrder" class="p-0"></label>
                <input asp-for="Category.DisplayOrder" class="form-control" disabled />
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-page="/categories/index" class="btn btn-outline border form-control">Cancel</a>
                </div>
            </div>

        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}